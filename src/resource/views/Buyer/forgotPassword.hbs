<div class="main">
    <form action="/buyer/reset" method="POST" class="form" id="form-1" autocomplete="off">
      <h3 class="heading">Xác nhận danh tính</h3>
  
      <div class="spacer"></div>
  
      <div class="form-group">
        <label for="fullname" class="form-label">Tên đầy đủ</label>
        <input id="fullname" name="fullname" type="fullname" placeholder="VD:Ngọc Văn" class="form-control">
        <span class="form-message"></span>
      </div>
      <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control">
        <span class="form-message"></span>
      </div>
  
      <button class="form-submit">Tiếp theo</button>
    </form>

</div>